# Ghostty Terminal Configuration
# Simplified config - use Aerospace for window management instead of Ghostty splits

# Font Configuration
font-family = "JetBrains Mono"
font-size = 12

# Colors (matching your Kanagawa theme)
background = #1f1f28
foreground = #dcd7ba
cursor-color = #c8c093
selection-background = #2d4f67

# Terminal Behavior
scrollback-limit = 10000

# Shell Integration
shell-integration = detect

# Key Bindings
# Window/Tab Management
keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+w=close_surface
keybind = ctrl+shift+n=new_window
keybind = ctrl+shift+q=quit

# Tab switching
keybind = ctrl+1=goto_tab:1
keybind = ctrl+2=goto_tab:2
keybind = ctrl+3=goto_tab:3
keybind = ctrl+4=goto_tab:4
keybind = ctrl+5=goto_tab:5
keybind = ctrl+6=goto_tab:6
keybind = ctrl+7=goto_tab:7
keybind = ctrl+8=goto_tab:8
keybind = ctrl+9=goto_tab:9
keybind = ctrl+shift+left=previous_tab
keybind = ctrl+shift+right=next_tab

# Copy/Paste
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard

# Reload configuration
keybind = ctrl+shift+r=reload_config

# Toggle fullscreen
keybind = ctrl+shift+z=toggle_fullscreen

# Shift+Enter sends escape sequence for multiline input
keybind = shift+enter=text:\x1b\r
